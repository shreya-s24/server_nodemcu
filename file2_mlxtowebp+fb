#include <Wire.h>
#include <ESP8266WebServer.h>
#include <FirebaseArduino.h>
#include <ESP8266WiFi.h>
#include <Adafruit_MLX90614.h>
#define firebasehost "console.firebase.google.com/u/1/project/racingteam-smartlab/overview"
Adafruit_MLX90614 mlx = Adafruit_MLX90614();
const char* ssid = "Shreya";  // Enter SSID here
const char* password = "123456789";  //Enter Password here

ESP8266WebServer server(80);
 
 
void setup() {
  Serial.begin(9600);
 Wire.begin(4,5) ;//sda,scl for i2c // put your setup code here, to run once: //void begin(int sda, int scl);
mlx.begin();
  Serial.println("Connecting to ");
  Serial.println(ssid);
  //connect to your local wi-fi network
  WiFi.begin(ssid, password);
  while (WiFi.status() != WL_CONNECTED) {
  delay(1000);
  Serial.print(".");
  }
  Serial.println("");
  Serial.println("WiFi connected..!");
  Serial.print("Got IP: ");  Serial.println(WiFi.localIP());


  server.begin();
  Serial.println("HTTP server started");
  Firebase.begin(firebasehost);
}
int r=0;

void loop() {
  Serial.print(mlx.readAmbientTempC());
  Serial.print(mlx.readObjectTempC());
  String n=Firebase.pushInt("Logs", r++);
  if (Firebase.failed()){
  Serial.println("failed logs"); Serial.println(Firebase.error()); return;
  
  }
  
  
  // put your main code here, to run repeatedly:

}//CODE FOR THE HTML PAGE TOO
 String SendHTML(uint8_t led){
  String ptr = "<!DOCTYPE html>\n";
  ptr +="<html>\n";
  ptr +="<head>\n";
  ptr +="<title>LED Control</title>\n";
  ptr +="</head>\n";
  ptr +="<body>\n";
  if(mlx.readObjectTempC()>55 && mlx.readObjectTempC() >45)
  ptr +="unsafe\n";
else
ptr +="safe\n";
  
  ptr +="</body>\n";
  ptr +="</html>\n";
  return ptr;
}
  
  
